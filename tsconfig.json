{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [ "*" ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
